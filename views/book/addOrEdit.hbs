<h3> {{ viewTitle }}</h3>

<form action="/book" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{book.id}}">
    <div class="form-group">
          <label>Book Id</label>
          <input type="text"
            class="form-control" name="book_id" id="" value="{{book.book_id}}" placeholder="Book Id">
    </div>

    <div class="form-group">
        <label >Name</label>
        <input type="text"
            class="form-control" name="name" value="{{book.name}}" id=""  placeholder="Book Name">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
          <label>Author</label>
          <input type="text"
            class="form-control" name="author" value="{{book.author}}" id="" placeholder="Author">
        </div>

            <div class="form-group col-md-6">
          <label >Price</label>
          <input type="text"
            class="form-control" name="price" value="{{book.price}}" id="" placeholder="Price">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" id="" class="btn text-light" style="background-color: #6f4e37;" name=""> <i class="fa fa-database"></i> Submit</button>
        <a href="/book/list" class="btn btn-secondary" role="submit"> <i class="fa fa-list-alt"></i> Books list</a>
    </div>

</form>